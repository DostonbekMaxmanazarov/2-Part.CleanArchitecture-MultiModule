<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Button style-->
    <style name="BasicButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_basic_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BasicEditText">
        <item name="android:background">@drawable/bg_basic_edit_text</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingStart">@dimen/padding_12</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>